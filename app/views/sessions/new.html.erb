<div class="container">
<h1 allign="center"> Login </h1>
    <%= form_for :session, :html => {class: "form-horizontal", role: "form"}, url: login_path do |f| %>
      <div <b class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
         </div>
      </div>
        <div <b class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
            </br>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %></br>
                </div>
              </div>
            </div>
          </div>
    <% end %>
            <div class="col-xs col-xs-offset-4">
              [<%= link_to "Cancel request and return to articles listing", articles_path %>]
            </div>
</div>
